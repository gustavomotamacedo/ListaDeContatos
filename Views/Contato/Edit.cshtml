@model ContatoModel
@{
    ViewData["Title"] = "Contatos - Editar";
}

<div class="container text-center">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="display-4">Editar contato</h1>
        </div>
    </div>
</div>
<form asp-controller="Contato" asp-action="Update" method="post">
     <input asp-for="@Model.Id" type="hidden" />
    <div class="mb-3">
        <label for="input-nome" class="form-label">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" id="input-nome" required placeholder="Fulano Da Silva Beltrano">
        @Html.ValidationMessageFor(c => c.Nome)
    </div>
    <div class="mb-3">
        <label for="input-email" class="form-label">Email</label>
        <input asp-for="Email" type="text" class="form-control" id="input-email"  placeholder="example@email.com">
        @Html.ValidationMessageFor(c => c.Email)
    </div>
    <div class="mb-3">
        <label for="input-celular" class="form-label">Celular</label>
        <input asp-for="Celular" type="text" class="form-control" id="input-celular" required placeholder="11 91234-1234">
        @Html.ValidationMessageFor(c => c.Celular)
    </div>
    <button type="submit" class="btn btn-primary">Salvar alterações</button>
    <a role="button" class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Cancelar</a>
</form>