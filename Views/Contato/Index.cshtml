@model List<ContatoModel>
@{
    ViewData["Title"] = "Contatos";
}

<div class="container text-center">
    <div class="row align-items-center">
        <div class="col-9">
            <h1 class="display-4">Lista de Contatos</h1>
        </div>
        <div class="col">
            <a role="button" class="btn btn-outline-success" asp-controller="Contato" asp-action="Create">Novo contato</a>
        </div>
        @{
            if (TempData["mensagemSucesso"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <button class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                    @TempData["mensagemSucesso"]
                </div>
            }
            if (TempData["mensagemErro"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <button class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                    @TempData["mensagemErro"]
                </div>
            }
            }
    </div>
</div>
<table class="table" id="tabela-contatos">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Celular</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null && Model.Any())
            {
                int i = 1;
                foreach (var contato in Model)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                        <td class="btn-group" role="group" aria-label="Basic example">
                            <a type="button" class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Edit">Editar</a>
                            <a type="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="DeleteConfirm">Apagar</a>
                        </td>
                    </tr>
                    i++;
                }
            }
        }
    </tbody>
</table>
