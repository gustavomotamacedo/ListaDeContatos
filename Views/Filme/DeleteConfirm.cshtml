@model FilmeModel
@{
    ViewData["Title"] = "Filmes - Deletar";
}

<div class="container text-center">
    <div class="row align-items-center">
        <div class="col">
            <h3>Deseja <strong>REALMENTE</strong> deletar o filme <strong>@Model.Nome</strong>?</h3>
        </div>
        <div class="row align-items-center">
            <div class="col">
                <a role="button" class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Filme" asp-action="Delete">Sim, desejo deletar o filme</a>
            </div>
            <div class="col">
                <a role="button" class="btn btn-secondary" asp-controller="Filme" asp-action="Index">Não, voltar para lista</a>
            </div>
        </div>
    </div>
</div>