@model List<FilmeModel>
@{
    ViewData["Title"] = "Filmes";
}

<div class="container text-center">
    <div class="row align-items-center">
        <div class="col-9">
            <h1 class="display-4">Lista de Filmes</h1>
        </div>
        <div class="col">
            <a role="button" class="btn btn-outline-success" asp-controller="Filme" asp-action="Create">Novo contato</a>
        </div>
        @{
            if (TempData["mensagemSucesso"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <button class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                    @TempData["mensagemSucesso"]
                </div>
            }
            if (TempData["mensagemErro"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <button class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                    @TempData["mensagemErro"]
                </div>
            }
        }
    </div>
</div>
<table class="table align-baseline">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Capa</th>
            <th scope="col">Nome</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null && Model.Any())
            {
                foreach (var filme in Model)
                {
                    <tr>
                        <td class="btn-group" role="group" aria-label="Basic example">
                            <a type="button" class="btn btn-primary" asp-route-id="@filme.Id" asp-controller="Filme" asp-action="Edit">Editar</a>
                            <a type="button" class="btn btn-danger" asp-route-id="@filme.Id" asp-controller="Filme" asp-action="DeleteConfirm">Deletar</a>
                        </td>
                        <td><img src="@filme.ImageLink" width="150px" /></td>
                        <td>@filme.Nome</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
